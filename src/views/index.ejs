<%- include('includes/head') %> <%- include('includes/nav') %>
<div class="container bg-dark text-white"></div>
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Task Manager</h1>
      <p class="text-center lead">Your tasks are displayed below.</p>

      <form class="task-form">
        <div class="input-group mb-3">
          <input type="text" class="form-control" id="taskTitle" placeholder="Enter task title" name="title"/>
        </div>
        <div class="input-group mb-3">
          <textarea class="form-control" id="taskDescription" name="description" placeholder="Enter task description"></textarea>
        </div>
        <div class="input-group mb-3">
          <button class="btn btn-primary" id="addTask">Add Task</button>
        </div>

        <div class="btn-group mb-3" role="group" aria-label="Task Filters">
          <button class="btn btn-outline-secondary active" data-filter="all">All</button>
          <button class="btn btn-outline-secondary" data-filter="pending">Pending</button>
          <button class="btn btn-outline-secondary" data-filter="in_progress">In Progress</button>
          <button class="btn btn-outline-secondary" data-filter="completed">Completed</button>
        </div>

        <ul id="taskList" class="list-group mb-3"></ul>
      </form>

      <div class="responsive-table">
        <table class="table table-bordered my-3">
            <tr>
              <td><a href="/" class="btn btn-warning btn-sm">Edit</a></td>
              <td><a href="/" class="btn btn-danger btn-sm">Delete</a></td>
            </tr>
        </table>
      </div>

      <div class="col-lg-2"></div>
    </div>
    <%- include('includes/footer') %>
  </div>
</div>
