<%- include('includes/head') %> <%- include('includes/nav') %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Contact Book</h1>
      <p class="text-center lead">Your saved contacts are listed below.</p>

      <div class="responsive-table">
        <table class="table my-3">
          <% contacts.forEach(cont => { %>
          <tr>
            <td><%= cont.name %></td>
            <td><%= cont.surname %></td>
            <td><%= cont.phone %></td>
            <td><%= cont.email %></td>
            <td><a href="/contact/<%= cont._id %>">Edit</a></td>
            <td><a class="text-danger" href="/contact/delete/<%= cont._id %>">Delete</a></td>
          </tr>
          <% }) %>
        </table>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
  <%- include('includes/footer') %>
</div>
